{
  "name": "proget-universal-bower-client",
  "version": "0.2.4",
  "description": "Client to create and push .upack archive on ProGet from bower projects.",
  "keywords": [
    "proget",
    "bower",
    "client"
  ],
  "bin": {
    "proget-universal-bower-client": "bin/proget-universal-bower-client",
    "pubc": "bin/proget-universal-bower-client"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/WoltersKluwerCanada/proget-universal-bower-client"
  },
  "bugs": {
    "url": "https://github.com/WoltersKluwerCanada/proget-universal-bower-client/issues"
  },
  "contributors": [
    {
      "name": "Alexandre Beaudoin",
      "url": "https://github.com/ofrogon"
    },
    {
      "name": "FranÃ§ois Genois",
      "url": "https://github.com/franknarf8"
    }
  ],
  "license": "MIT",
  "dependencies": {
    "adm-zip": "^0.4.7",
    "colors": "^1.1.2",
    "commander": "^2.9.0",
    "glob": "^7.0.3",
    "ignore": "^3.1.2",
    "progress": "^1.1.8",
    "request": "^2.72.0",
    "semver": "^5.3.0"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "coveralls": "^2.11.14",
    "fs-extra": "^2.0.0",
    "istanbul": "^1.1.0-alpha.1",
    "jsdoc": "^3.4.0",
    "mocha": "^3.0.0",
    "nyc": "^10.0.0",
    "rimraf": "^2.5.2",
    "tslint": "^4.4.2",
    "ts-node": "^2.0.0",
    "typescript": "^2.2.1",
    "typings": "^2.1.0"
  },
  "scripts": {
    "buildDeploy": "typings install && rimraf lib/* && tsc --sourceMap false",
    "coverage": "nyc npm run test:unit",
    "coveralls": "nyc report --reporter=text-lcov npm run test:unit | coveralls",
    "lint": "tslint --project tsconfig.json",
    "lint:Tests": "tslint --project tsconfig.json test/**/*.test.ts",
    "lint:Fix": "tslint --project tsconfig.json --fix",
    "prepublish": "npm run buildDeploy",
    "test": "npm run buildDeploy && npm run lint && npm run test:e2e && npm run coverage",
    "test:unit": "mocha --compilers ts:ts-node/register --bail test/unit/*.test.ts",
    "test:e2e": "mocha --compilers ts:ts-node/register --bail test/e2e/*.test.ts"
  },
  "engines": {
    "node": ">=4"
  },
  "nyc": {
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "node_modules/",
      "dist/"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  }
}
